{
  "name": "React-App-Setup",
  "version": "1.0.0",
  "description": "session app",
  "main": "server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rgarzadev/React-Components-Test.git"
  },
  "keywords": [],
  "author": "Ryan Garza",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rgarzadev/React-Components-Test/issues"
  },
  "homepage": "https://github.com/rgarzadev/React-Components-Test#readme",
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "if-env": "^1.0.4"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "nodemon": "^2.0.6"
  }
}
